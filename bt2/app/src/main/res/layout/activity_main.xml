<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nezuko"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:text="Tên đăng nhập"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/img"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/eddangnhap"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dangnhap"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <TextView
        android:id="@+id/matkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mật khẩu"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dangnhap"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edmatkhau"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/matkhau"
        app:layout_constraintTop_toBottomOf="@+id/eddangnhap" />

    <Button
        android:id="@+id/btndnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Đăng nhập"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matkhau" />

    <Button
        android:id="@+id/btntrove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:text="Trở về"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/matkhau"
        app:layout_constraintTop_toBottomOf="@+id/edmatkhau" />


</androidx.constraintlayout.widget.ConstraintLayout>
